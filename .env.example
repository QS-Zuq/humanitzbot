# ============================================================
# HumanitZ Discord Bot - Configuration
# ============================================================
# Copy this file to .env and fill in your values
# ============================================================

# ── Discord Bot Settings ─────────────────────────────────────
# Create a bot at https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here

# The guild (server) ID where the bot will run
DISCORD_GUILD_ID=your_discord_guild_id_here

# Channel ID where admin messages are sent to the server (Discord → [Admin] in-game)
# Required for chat relay, log watcher, and !admin alerts. Optional if those features are disabled.
# ADMIN_CHANNEL_ID=your_admin_channel_id_here

# Channel ID where player chat appears (in-game → Discord)
# If empty, player chat goes to the admin channel
# CHAT_CHANNEL_ID=your_chat_channel_id_here

# ── HumanitZ Server RCON Settings ───────────────────────────
# Get these from your Bisect Hosting control panel
RCON_HOST=your_server_ip_here
RCON_PORT=your_server_port_here
RCON_PASSWORD=your_rcon_password_here

# ── Bot Behavior ─────────────────────────────────────────────
# How often to poll server chat (in milliseconds)
CHAT_POLL_INTERVAL=10000

# How often to refresh server status cache (in milliseconds)
STATUS_CACHE_TTL=30000

# How often to update status voice channels (in milliseconds, minimum 60000)
# Discord rate-limits channel renames to ~2 per 10 minutes per channel,
# so 5 minutes (300000) is a safe default.
STATUS_CHANNEL_INTERVAL=300000

# How often to update the server-status text embed (in milliseconds)
SERVER_STATUS_INTERVAL=30000

# Channel ID for the live server-status embed
# SERVER_STATUS_CHANNEL_ID=your_server_status_channel_id_here

# ── Auto-Messages ────────────────────────────────────────────
# Discord invite link broadcast in-game
# DISCORD_INVITE_LINK=https://discord.gg/yourcode

# How often to broadcast Discord link in-game (ms, default 30 min)
# AUTO_MSG_LINK_INTERVAL=1800000

# How often to broadcast promo message in-game (ms, default 45 min)
# AUTO_MSG_PROMO_INTERVAL=2700000

# How often to check for new joins for welcome message (ms)
# AUTO_MSG_JOIN_CHECK=10000

# ── FTP Log / Save File Settings ─────────────────────────────
# FTP (SFTP) credentials for your game server hosting
# FTP_HOST=your_ftp_host_here
# FTP_PORT=8821
# FTP_USER=your_ftp_username_here
# FTP_PASSWORD=your_ftp_password_here
# FTP_LOG_PATH=/HumanitZServer/HMZLog.log
# FTP_CONNECT_LOG_PATH=/HumanitZServer/PlayerConnectedLog.txt
# FTP_ID_MAP_PATH=/HumanitZServer/PlayerIDMapped.txt
# LOG_POLL_INTERVAL=30000

# Channel ID for game log events (damage, builds, etc.)
# LOG_CHANNEL_ID=your_log_channel_id_here

# Path to the dedicated server save file (for kill stats, vitals, inventory)
# FTP_SAVE_PATH=/HumanitZServer/Saved/SaveGames/SaveList/Default/Save_DedicatedSaveMP.sav
# SAVE_POLL_INTERVAL=300000

# ── Player Stats Channel ─────────────────────────────────────
# Dedicated channel for the player-stats embed with dropdown
# PLAYER_STATS_CHANNEL_ID=your_player_stats_channel_id_here

# ── Feature Toggles ──────────────────────────────────────────
# Major modules — set to false to completely disable a feature.
# All are enabled by default. Disabling a module skips it at startup.
# ENABLE_STATUS_CHANNELS=true      # Voice channel player count dashboard
# ENABLE_SERVER_STATUS=true        # Live server-status text embed
# ENABLE_CHAT_RELAY=true           # Bidirectional chat bridge + !admin alerts
# ENABLE_AUTO_MESSAGES=true        # All periodic broadcasts + join welcomes
# ENABLE_LOG_WATCHER=true          # SFTP log parsing + daily activity threads
# ENABLE_PLAYER_STATS=true         # Save-file parsing + stats embed + dropdowns
# ENABLE_PLAYTIME=true             # Cumulative playtime tracking

# Log watcher sub-features (only apply when ENABLE_LOG_WATCHER + ENABLE_PLAYER_STATS=true)
# ENABLE_KILL_FEED=true            # Post zombie kill batches to daily activity thread

# ── PvP Scheduler ────────────────────────────────────────────
# Toggles PVP on/off at scheduled real-world times.
# Edits GameServerSettings.ini via SFTP and restarts the server.
# ENABLE_PVP_SCHEDULER=false       # Disabled by default
# PVP_START_TIME=18:00             # PvP turns ON  (HH:MM format, in PVP_TIMEZONE)
# PVP_END_TIME=22:00               # PvP turns OFF (HH:MM format, in PVP_TIMEZONE)
#                                  # You can also use just the hour: PVP_START_TIME=18
# PVP_TIMEZONE=UTC                 # IANA timezone — use any value from the "TZ identifier" column at:
#                                  # https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
#                                  # Examples: UTC, America/New_York, America/Chicago,
#                                  #           America/Denver, America/Los_Angeles, Europe/London
#                                  # DST is handled automatically (e.g. America/New_York = EST or EDT)
# PVP_RESTART_DELAY=10             # Minutes of countdown warnings before restart (10,5,3,2,1)
# PVP_UPDATE_SERVER_NAME=false     # Append "PVP Enabled HH:MM-HH:MM timezone" to server name during PvP window
# FTP_SETTINGS_PATH=/HumanitZServer/GameServerSettings.ini

# Auto-message sub-features (only apply when ENABLE_AUTO_MESSAGES=true)
# ENABLE_AUTO_MSG_LINK=true        # Periodic Discord link broadcast
# ENABLE_AUTO_MSG_PROMO=true       # Periodic promo message broadcast
# ENABLE_AUTO_MSG_WELCOME=true     # Welcome messages on player join

# Player stats embed sections (only apply when ENABLE_PLAYER_STATS=true)
# Set to true for PVP servers to show raid stats
# SHOW_RAID_STATS=false

# Player stats embed sections (all on by default, set to false to hide)
# SHOW_VITALS=true
# SHOW_STATUS_EFFECTS=true
# SHOW_INVENTORY=true
# SHOW_RECIPES=true
# SHOW_LORE=true
# SHOW_CONNECTIONS=true
